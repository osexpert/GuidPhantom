# Remove the line below if you want to inherit .editorconfig settings from higher directories
root = true

# C# files
[*.cs]

#### Core EditorConfig Options ####

# Indentation and spacing
indent_size = 4
indent_style = tab
tab_width = 4

dotnet_diagnostic.CS1998.severity = none

# XML-styled files
[*.{csproj,props,targets}]
indent_size = 2
indent_style = space
tab_width = 2

# NuGet config file
[nuget.config]
indent_size = 2
indent_style = space
tab_width = 2